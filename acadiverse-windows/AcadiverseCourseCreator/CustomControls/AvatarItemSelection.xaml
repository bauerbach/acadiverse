<UserControl x:Class="AcadiverseCourseCreator.CustomControls.AvatarItemSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AcadiverseCourseCreator.CustomControls"
             mc:Ignorable="d" Width="379" Height="24" Background="#FFAFAFAF" Loaded="AvatarItemSelection_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75" />
            <ColumnDefinition Width="24" />
            <ColumnDefinition Width="256" />
            <ColumnDefinition Width="24" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtItemType" Text="Skin Color" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" />
        <Button x:Name="btnPreviousItem" Grid.Column="1" Grid.Row="0" />
        <TextBlock x:Name="txtItemName" Text="Item Name" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Grid.Row="0" />
        <Button x:Name="btnNextItem" Grid.Column="3" Grid.Row="0" />
    </Grid>
</UserControl>
