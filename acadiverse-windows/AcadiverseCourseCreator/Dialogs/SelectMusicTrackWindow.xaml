<Window x:Class="AcadiverseCourseCreator.SelectMusicTrackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcadiverseCourseCreator"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight" Loaded="SelectMusicTrackWindow_Loaded"
        Title="SelectMusicTrackWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <ListBox x:Name="lstMusicTracks" Grid.Column="0" Grid.Row="0" SelectionChanged="lstMusicTracks_SelectionChanged" />
        <MediaElement x:Name="mdePreview" Grid.Column="1" Grid.Row="0" />
        <Button x:Name="btnOK" Content="OK" Grid.Column="1" Width="80" Margin="325,5,95,5" Grid.Row="1"/>
        <Button x:Name="btnCancel" Content="Cancel" Grid.Column="1" Width="80" Margin="410,5,10,5" Grid.Row="1"/>
    </Grid>
</Window>
