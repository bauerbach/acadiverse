<Window x:Class="AcadiverseCourseCreator.Dialogs.PromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcadiverseCourseCreator.Dialogs"
        mc:Ignorable="d"
        Title="PromptDialog" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="40" />
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtPrompt" TextWrapping="Wrap" Text="Please enter some text." Grid.Column="0" Grid.Row="0" />
        <TextBox x:Name="txtInput" Grid.Column="0" Grid.Row="1" />
        <Button x:Name="btnOK" Content="OK" Grid.Column="0" Grid.Row="2" Height="20" Width="57" Margin="180,5,63,5" Click="btnOK_Click" />
        <Button x:Name="btnCancel" Content="Cancel" Grid.Column="0" Grid.Row="2"  Height="20" Width="57" Margin="242,5,1,5" Click="btnCancel_Click" />
    </Grid>
</Window>
